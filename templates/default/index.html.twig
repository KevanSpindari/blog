{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h1>Welkom op de blogwebsite!</h1>

</div>

    <main role="main">

        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row">
                    {% for blog in blog %}
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <div class="card-body">
                                    <h4 class="card-title">{{ blog.title }}</h4>
                                    <p class="card-text">{{ blog.text | raw }}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" onclick="window.location.href='{{ path('blog_show', {'id': blog.id}) }}'" class="btn btn-sm btn-outline-secondary">View</button>
                                            <button type="button" onclick="window.location.href='{{ path('blog_edit', {'id': blog.id}) }}'" class="btn btn-sm btn-outline-secondary">Edit</button>
                                        </div>
                                        <small class="text-muted">{{ blog.creatdate ? blog.editdate|date('Y-m-d') : '' }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>

    {% endblock %}
